<body bgcolor="#b2bec3">
<div class="profilelogo"></div>
<div class="siteheaders">
<h1>Featured Post</h1>
</div>
<br>
<%= button_to "Create Post", '/posts/new', method: :get%>
<div class="profile">
<h1><%= link_to current_user.username, user_path(current_user.id) %></h1>
</div>
<div class="whitespacecontainer">
    <div class="whitespace">
    <ul>
        <%= @posts.each do |post|%>
            <% @post_owner = User.find_by(id: post.user_id) %>     
            
            <h3><%= link_to post.title, post_path(post) %> by <%= link_to @post_owner.username, user_path(@post_owner.id) %></h3>
            <p><%= post.likes.count %> <%= (post.likes.count) == 1 ? 'Like' : 'Likes'%></p>
            <image src="<%=(url_for(post.picture)) %>">
            <p><%= post.description %></p>
        <%end%>
    </ul>
    </div>
</div>