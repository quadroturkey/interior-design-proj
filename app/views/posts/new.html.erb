<h1>Make a NEW post</h1>
<h2><%= current_user.username %></h2>
<ul>
<%= form_for(@post) do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>

    <%= f.label :picture %><br>
    <%= f.file_field :picture %><br>

    <%= f.label :description %><br>
    <%= f.text_field :description %><br>
    
    <%= f.submit %>
<% end %>
</ul>
