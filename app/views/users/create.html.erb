<body bgcolor="#b2bec3">
<div class="logo">
<h1 align = "center"></h1>
</div>

<h1 align = "center">Create a Account</h1>

<ul>
  <%= form_for @user do |x| %>
    <div class="buttons">
    <%= x.label :name %><br>
    <%= x.text_field :name, placeholder: "Name" %><br>
    <%= x.label :username %><br>
    <%= x.text_field :username, placeholder: "Username"  %><br>
    <%= x.label :email  %><br>
    <%= x.text_field :email, placeholder: "Email"  %><br>
    <%= x.label :password%><br>
    <%= x.password_field :password, placeholder: "Password"%><br>
    <%= x.submit "Create" %>
  <%end%>
  </div>
</ul>